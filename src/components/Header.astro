---
import Link from "$/components/Link.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="mb-8 mt-5">
  <Link href="/" class="flex w-fit gap-2 !text-2xl !font-semibold !text-black">
    <img
      src="/icon.svg"
      alt="A profile picture that I use for all of my socials"
      width="32"
      class="rounded-full"
    />
     armaan
  </Link>
</header>

<h1 class="mb-5 text-3xl font-bold">{title}</h1>
