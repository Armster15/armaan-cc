---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="mb-8 mt-5 text-2xl font-semibold underline">
  <a
    href="/"
    class="flex w-fit gap-2 underline decoration-neutral-400 underline-offset-4 hover:decoration-neutral-500 focus:decoration-neutral-500"
  >
    <img
      src="/icon.svg"
      alt="A profile picture that I use for all of my socials"
      width="32"
      class="rounded-full"
    />
     armaan
  </a>
</header>

<h1 class="mb-5 text-3xl font-bold">{title}</h1>
